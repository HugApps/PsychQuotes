<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/Relayout"
    android:background="#43b47329">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/Save"
        android:layout_alignBottom="@+id/LikeButton"
        android:layout_alignLeft="@+id/SaveTag"
        android:layout_alignStart="@+id/SaveTag" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/SaveTag"
        android:layout_gravity="center_horizontal"
        android:background="#fff4ffd0"
        android:autoText="false"

        android:textColor="#f8132115"
        android:textAlignment="center"
        android:layout_alignTop="@+id/SaveTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Save Quote"
        android:id="@+id/SaveTitle"

        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/Cancel"
        android:layout_gravity="right|bottom"
        android:layout_alignBottom="@+id/LikeButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:layout_width="108dp"
        android:layout_height="104dp"
        android:id="@+id/LikeButton"
        android:src="@drawable/thumb"
        android:background="@android:color/transparent"
        android:layout_weight="0.91"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/SaveTag"
        android:layout_centerHorizontal="true" />

</RelativeLayout>